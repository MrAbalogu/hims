 <!-- Preloader -->

    
<section id="wrapper" class="step-register">
  <div class="register-box">
    <div class="">
       <a href="<%=root_path%>" class="text-center db"><img src="../asset/plugins/images/HIISlogoxx.png" alt="Home" /></a>
      


      <!-- multistep form -->

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'msform', multipart: true}) do |f| %>
        <!-- progressbar -->
        <%= devise_error_messages! %>

        <ul id="eliteregister">
        <li class="active"> Account Setup</li>
        <li>Provider Services</li>
        <li>Provider Details</li>
        </ul>
        <!-- fieldsets -->
        <fieldset>
        <h2 class="fs-title">Account Setup</h2>
  
          <%= f.email_field :email, autofocus: true, placeholder: 'Email', required: true %>
         
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password (6 Characters Minimum)', required: true %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %>

        <input type="button" name="next" class="next action-button" value="Next" />
        </fieldset>
        <fieldset>
        <h2 class="fs-title">Provider Services</h2>
     
        <div class="form-group">
        <%= f.label :facility_type, class: 'pull-left' %>
        <%= f.select :facility_type, options_for_select([['OUT Patient', 'out patient'], ['IN Patient', 'in patient'], ['BOTH', 'both']], 'in patient'), {}, {class: 'form-control', required: true} %>
       </div>

        <div class="form-group">
       <%= f.label :category, class: 'pull-left' %>
        <%= f.select :category, options_for_select([['Dental', 'dental'], ['Optical', 'optical'], ['OB/GYNs', 'OG/GYNs'], ['Generalists', 'generalists'], ['Others', 'others']], 'dental'), {}, {class: 'form-control', required: true} %>
        </div>

        <%= f.text_field :region, placeholder: 'Region of Operation'%>
        
        <div class="form-group">
        <%= f.label :payment_option, class: 'pull-left' %>
        <%= f.select :payment_option, options_for_select([['Fee For Service', 'fee for service'], ['Capitation', 'capitation'], ['BOTH', 'both']], 'fee for service'), {}, {class: 'form-control', required: true} %>
        </div>
     
        <input type="button" name="previous" class="previous action-button" value="Previous" />
        <input type="button" name="next" class="next action-button" value="Next" />
        </fieldset>
        <fieldset>
        <h2 class="fs-title">Provider Details</h2>
        <%= f.text_field :company_name, autofocus:true, placeholder: 'Facility  Name', required: true %>
        <%= f.text_field :address, placeholder: 'Address', required: true %>
        <%= f.text_field :phone, placeholder: 'Facility Contact Number', required: true %>

        <label for="avatar">Avatar </label>
        <%= f.file_field :avatar, placeholder: 'Avatar' %>
       

        <input type="button" name="previous" class="previous action-button" value="Previous" />
        <%= f.submit "Submit", class: 'action-button' %>
        </fieldset>
        </form>
      <% end %>
      
    </div>
  </div>
</section>








