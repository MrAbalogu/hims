    
    <%= render 'layouts/shared/nav' %>
    <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row bg-title">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Claims</h4> </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12"> 
                        
                    </div>
                </div>

                 <div class="row">
                    <div class="col-lg-12">
                        <div class="white-box">
                            <h3 class="box-title m-b-0">Claim Progress Preview</h3>
                            <p class="text-muted m-b-20"></p>
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Claim NO#</th>
                                            <th>Date</th>
                                            <th>Insurer</th>
                                            <th>Requested(₦)</th>
                                            <th> Approved(₦) </th>
                                            <th>Status</th>
                                            <th>Due</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                     <% @claims.each do |claim| %>
                                        <tr>
                                            <td><a href="<%=provider_claim_path(claim)%>">#<%= claim.claim_no%></a></td>
                                            <td><span class="text-muted"><i class="fa fa-clock-o"></i><%=claim.created_at.strftime("%F")%></span></td>
                                            <td><%=claim.insurer.company_name%></td>
                                            <td>₦<%=total_claim_cost(claim)%></td>
                                            <td>₦<%=claim.authorized_amount%></td>
                                            <td>
                                              <div class="label label-table <%=get_claim_status_code(claim.status)%>"> <%=get_claim_status_text(claim.status)%> </div>
                                            </td>
                                            <td><%=(claim.created_at + (2*7*24*60*60)).strftime("%F")%></td>
                                        </tr>
                                      <% end %>
                                      
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>



               


            </div>
            <!-- /.container-fluid -->
            <footer class="footer text-center"> 2018 &copy; HIISafrica </footer>
        </div>
        <!-- /#page-wrapper -->


