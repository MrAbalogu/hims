 <section id="wrapper" class="login-register">
    <div class="login-box">

 <a href="<%= root_path%>" class="text-center db"><img src="../asset/plugins/images/HIISlogoxx.png" alt="Home"><br/></a>
      

        <div class="white-box">

                  <h2 class="box-title m-b-20"> Sign In (HEALTHCARE INSURER)</h2>


          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal form-material', id: 'loginform'}) do |f| %>
            
            <div class="form-group ">
            <div class="col-xs-12">
                  <%= f.email_field :email, autofocus: true, class: 'form-control', required: true, placeholder: 'Email' %>
            </div>

            </div>
            <div class="form-group">
            <div class="col-xs-12">
                 <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true, placeholder:'Password' %>
            </div>
            </div>
            <div class="form-group">
            <div class="col-md-12">

                <div class="checkbox checkbox-primary pull-left p-t-0">
                  <% if devise_mapping.rememberable? -%>
                      <%= f.check_box :remember_me, type: 'checkbox', id: 'checkbox-signup' %>
                      <label for="checkbox-signup"> Remember me </label>
                  <% end -%>
               
                </div>
                <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Forgot pwd?</a> </div>
            </div>
            <div class="form-group text-center m-t-20">
            <div class="col-xs-12">

                <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit" data-disable-with="Please wait ...">Log In</button>
            </div>
            
            </div>
            
            <div class="form-group m-b-0">
            <div class="col-sm-12 text-center">
                <p>Don't have an account? <a href="<%=new_insurer_registration_path%>" class="text-primary m-l-5"><b>Sign Up</b></a></p>
            </div>
            </div>
          <% end %>
    

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-horizontal', id: 'recoverform', method: :post }) do |f| %>
  <%= devise_error_messages! %>

            <div class="form-group ">
            <div class="col-xs-12">
                <h3>Recover Password</h3>
                <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
            </div>
            </div>
            <div class="form-group ">
            <div class="col-xs-12">
                 <%= f.email_field :email, autofocus: true , class: 'form-control', required: true, placeholder: 'Email' %>
            </div>
            </div>
            <div class="form-group text-center m-t-20">
            <div class="col-xs-12">
                <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit" data-disable-with="Resetting Password">Reset</button>
            </div>
            </div>
        <% end %>


        </div>
    </div>
    </section>
