    
    <%= render 'layouts/shared/nav' %>
    <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row bg-title">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <h4 class="page-title">Viewing  <div class="label label-table <%=get_insurer_claims_status_code(@filter)%>"> <%=@filter%> </div>Claims</h4> </div>
                    <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12"> 
                        
                    </div>
                </div>

                 <div class="row">
                    <div class="col-lg-12">
                        <div class="white-box">
                            <h3 class="box-title m-b-0">Claim Progress Preview</h3>
                            <p class="text-muted m-b-20"></p>
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Claim NO#</th>
                                            <th>Created </th>
                                            <th>Provider</th>
                                            <th>Requested(₦)</th>
                                            <th> Approved(₦) </th>
                                            <th>Due</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                     <% @claims.each do |claim| %>
                                        <tr>
                                            <td><a href="<%=insurer_claim_path(claim)%>">#<%=claim.claim_no%></a></td>
                                            <td><span class="text-muted"><i class="fa fa-clock-o"></i><%=claim.created_at.strftime("%F")%></span></td>
                                            <td><%=claim.provider.company_name%></td>
                                            <td>₦<%=total_claim_cost(claim)%></td>
                                            <td>₦<%=claim.authorized_amount%></td>
                                           
                                            <td><%=(claim.created_at + (2*7*24*60*60)).strftime("%F")%></td>
                                            <% if @filter == 'pending'%>
                                            <td> <a href="<%=insurer_claim_path(claim)%>" class="btn btn-info btn-sm"> <i class="fa fa-eye"></i> view </a> </td>
                                            <% elsif @filter == 'vetted'%>
                                             <td><a href="<%=insurer_claim_path(claim)%>" class="btn btn-primary btn-sm"> <i class="fa fa-arrow-right"></i> view</a></td>
                                            <% else %>
                                             <td><a href="<%=insurer_claim_path(claim)%>" class="btn btn-success btn-sm"> <i class="fa fa-eye"></i> view</a></td>
                                            <% end %>
                                        </tr>
                                      <% end %>
                                      
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>



               


            </div>
            <!-- /.container-fluid -->
            <footer class="footer text-center"> 2018 &copy; HIISafrica </footer>
        </div>
        <!-- /#page-wrapper -->


